---
// CTAUrgent.astro - Componente CTA urgente reutilizable
export interface Props {
  title?: string;
  subtitle?: string;
  whatsappNumber?: string;
  whatsappMessage?: string;
  phoneNumber?: string;
  className?: string;
}

const {
  title = "¿Tu mascota necesita atención?",
  subtitle = "15+ años de experiencia nos respaldan. Agenda ahora y recibe atención el mismo día.",
  whatsappNumber = "5491234567890",
  whatsappMessage = "Hola, necesito agendar una cita para mi mascota. ¿Tienen disponibilidad hoy?",
  phoneNumber = "+541234567890",
  className = ""
} = Astro.props;

const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<div class={`bg-gradient-to-r from-primary/10 via-secondary/10 to-accent/10 rounded-3xl p-8 lg:p-12 text-center border border-primary/20 shadow-lg ${className}`}>
  <div class="max-w-3xl mx-auto space-y-6">

    <!-- Main CTA Content -->
    <h3 class="text-3xl lg:text-4xl font-bold text-base-content">
      {title}
    </h3>
    <p class="text-lg lg:text-xl text-base-content/80 leading-relaxed">
      <span class="font-semibold text-primary">15+ años de experiencia</span> nos respaldan.
      Agenda ahora y recibe <span class="font-semibold text-secondary">atención el mismo día</span>.
    </p>

    <!-- Buttons with enhanced design -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-lg mx-auto pt-4">
      <!-- Primary CTA - WhatsApp -->
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="group relative btn btn-success btn-lg text-white hover:btn-success-focus border-0 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 flex-1 sm:flex-none overflow-hidden"
      >
        <!-- Animated background -->
        <div class="absolute inset-0 bg-gradient-to-r from-green-400 to-emerald-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

        <!-- Content -->
        <div class="relative flex items-center justify-center gap-3">
          <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.787"/>
          </svg>
          <span class="font-semibold">Contactar Ahora</span>
          <div class="hidden sm:flex items-center gap-1 text-xs opacity-90">
            <span>•</span>
            <span>Respuesta inmediata</span>
          </div>
        </div>
      </a>

      <!-- Secondary CTA - Llamar -->
      <a
        href={`tel:${phoneNumber}`}
        class="group btn btn-outline btn-primary btn-lg border-2 hover:btn-primary hover:text-white transition-all duration-300 transform hover:-translate-y-1 flex-1 sm:flex-none shadow-md hover:shadow-lg"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <span class="font-semibold">Llamar Directamente</span>
      </a>
    </div>

    <!-- Trust indicators -->
    <div class="flex flex-wrap justify-center items-center gap-6 pt-6 text-sm text-base-content/60">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        <span>Atención 24/7</span>
      </div>

      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        <span>Citas el mismo día</span>
      </div>
    </div>
  </div>
</div>