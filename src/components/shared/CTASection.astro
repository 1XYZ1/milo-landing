---
// CTASection.astro - Componente CTA reutilizable
export interface Props {
  title?: string;
  description?: string;
  primaryButton?: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
    icon?: string;
    type?: 'outline' | 'whatsapp';
  };
  alignment?: 'left' | 'center';
  className?: string;
}

const {
  title = "¿Listo para comenzar?",
  description = "Ponte en contacto con nosotros para más información",
  primaryButton,
  secondaryButton,
  alignment = "left",
  className = ""
} = Astro.props;

const alignmentClass = alignment === 'center' ? 'text-center' : 'text-left';
---

<div class={`${className}`}>
  <div class={`mb-6 ${alignmentClass}`}>
    {title && (
      <h4 class="text-xl lg:text-2xl font-bold text-base-content mb-2">
        {title}
      </h4>
    )}
    {description && (
      <p class="text-base-content/70">
        {description}
      </p>
    )}
  </div>

  <div class={`flex flex-col sm:flex-row gap-4 ${alignment === 'center' ? 'justify-center' : ''}`}>
    {primaryButton && (
      <a href={primaryButton.href} class="btn btn-primary btn-lg flex-1 sm:flex-none">
        {primaryButton.icon === 'team' && (
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
          </svg>
        )}
        {primaryButton.icon === 'services' && (
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        )}
        {primaryButton.icon === 'calendar' && (
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        )}
        {primaryButton.text}
      </a>
    )}

    {secondaryButton && (
      <a
        href={secondaryButton.href}
        class={`btn btn-lg flex-1 sm:flex-none ${
          secondaryButton.type === 'whatsapp'
            ? 'btn-success text-white hover:btn-success-focus'
            : 'btn-outline'
        }`}
        target={secondaryButton.type === 'whatsapp' ? '_blank' : undefined}
        rel={secondaryButton.type === 'whatsapp' ? 'noopener noreferrer' : undefined}
      >
        {secondaryButton.type === 'whatsapp' && (
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.787"/>
          </svg>
        )}
        {secondaryButton.icon === 'services' && secondaryButton.type !== 'whatsapp' && (
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        )}
        {secondaryButton.icon === 'info' && secondaryButton.type !== 'whatsapp' && (
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        )}
        {secondaryButton.text}
      </a>
    )}
  </div>
</div>